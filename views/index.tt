<div id="page">
      <div id="content">
          <%- IF items.size == 0 %>
          Nothing to read
          <%- ELSE %>
          <ul>          
            <% FOR item IN items %>
            <li id="item_<% item.id %>" class="item unread">
                <h3 class="title">
                    <a href="<% item.link %>" class="title"><% item.title %></a>
                </h3>

                <div class="article_meta">
                    <% item.feed.name %>, <% item.last_update %>
                </div>

                <div class="article">
                    <% item.content %>
                </div>
                <div id="item_end_<% item.id %>" class="unread_end"></div>
            </li>
            <% END %>
          </ul>
          <%- END %>
      </div>
    </div>
